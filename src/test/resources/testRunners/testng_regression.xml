<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4"
	thread-count="5" parallel="tests">

	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
	</listeners>

	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Login Page Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Account Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>


	<test name="Account Page Test_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>

	<test name="Account Page Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>


	<test name="Product Info PageTest_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Product Info PageTest_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Product Info PageTest_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>


	<test name="Search results Page Test chrome">
		<parameter name="browser" value="chrome" />
