	<test name="Search results Page Test edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.SearchResultsTest" />
		</classes>
	</test>


	<test name="User registration Test chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.UserRegistrationTest" />
		</classes>
	</test>


	<test name="User registration Test firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.UserRegistrationTest" />
		</classes>
	</test>


	<test name="User registration Test edge">
		<parameter name="browser" value="edge" />
